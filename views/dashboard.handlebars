{{> add-post}}

    <h2>Your Posts ({{posts.length}})</h2>
    {{#if posts.length}}
    <section>
        <ul class="post-list">
            {{#each posts as |post|}}
            <li>
                <article class="post">
                    {{> post-info post}}
                    <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
                </article>
            </li>
            {{/each}}
        </ul>
    </section>
    {{/if}}

    <script src="/javascript/add-post.js"></script>