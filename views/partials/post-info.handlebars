<div class="title">
    <h2><a href="/post/{{id}}">{{title}}</a></h2>
    <span class="meta">by
      {{user.username}}
      on
      {{format_date created_at}}</span>
  </div>
  <div class="content">
      {{post_content}}
       | {{comments.length}}
        {{format_plural "comment" comments.length}}
  </div>