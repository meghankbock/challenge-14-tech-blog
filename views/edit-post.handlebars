    <article class="edit-post">
    <h2>
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            <label for="post-title">Title</label>
            <input name="post-title" type="text" value="{{post.title}}" />
        </div>
        <div>
            <label for="post-content">Content</label>
            <textarea name="post-content" value="{{post.post_content}}"></textarea>
        </div>
        <span class="meta">
            by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </span>
        <div>
            <button type="submit" class="save-post-btn">Save post</button>
            <button type="button" class="delete-post-btn">Delete post</button>
        </div>
    </form>
</article>

<article class="comments">
    <h3>Comments ({{post.comments.length}})</h3>
{{#if loggedIn}}
<form class="comment-form">
    <div>
        <textarea name="comment-text"></textarea>
    </div>
    <div>
        <button type="submit">add comment</button>
    </div>
</form>
{{/if}}

{{#if post.comments.length}}
{{> comments post.comments}}
{{/if}}
    </article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/add-comment.js"></script>